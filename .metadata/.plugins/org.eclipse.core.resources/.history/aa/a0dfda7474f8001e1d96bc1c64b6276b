package kr.ac.kopo.ui;

import java.util.Scanner;

public class BoardUI {
	private Scanner sc;
	
	public BoardUI() {
		sc = new Scanner(System.in);
	}
	
	private String scanStr(String msg) {
		System.out.println(msg);
		return sc.nextLine();
	}
	
	private int scanInt(String msg) {
		return Integer.parseInt(scanStr(msg));
	}
	
	private int choiceMenu() {
		System.out.println("***** MENU *****");
		System.out.println("1. 전체게시글 조회");
		System.out.println("2. 글번호 조회");
		System.out.println("3. 새글 등록");
		System.out.println("4. 게시글 수정");
		System.out.println("5. 게시글 삭제");
		System.out.println("0. 종료");
		int type = scanInt("항목을 선택하세요 : ");
		return type;
	}
	
	public void execute() {
		while(true) {
			int type = choiceMenu();
			switch(type) {
			case 1 :
				System.out.println("전체 게시글 조회 서비스...");
				break;
			case 2 :
				System.out.println("글번호 조회 서비스");
				break;
			case 3 :
				System.out.println("새글 등록 서비스...");
				break;
			case 4 :
				System.out.println("게시글 수정 서비스...");
				break;
			case 5 :
				System.out.println("게시글 삭제 서비스...");
				break;
			case 0 :
				System.out.println("프로그램 종료...");
				break;
			}
		}

	}
}
		
